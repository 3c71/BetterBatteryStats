<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.asksven.betterbatterystats.widgets.MyPieGraph
        android:id="@+id/piegraph"
        android:layout_width="match_parent"
        android:layout_height="@dimen/graph_height"
        android:layout_margin="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/legend_margin"
        android:layout_marginRight="@dimen/legend_margin"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:background="@color/state_green" />

            <TextView
                android:id="@+id/textViewDeepSleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:layout_weight="10"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:text="Deep Sleep"
                android:textColor="@color/state_green"
                android:textSize="@dimen/legend_font_size" />

            <TextView
                android:id="@+id/textViewDeepSleepValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:text="0h 13m (24%)"
                android:textColor="@color/state_green"
                android:textSize="@dimen/legend_font_size" />
        </LinearLayout>

        <View
            android:id="@+id/top_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/headline"
            android:background="@color/concrete" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="8dp"
                android:background="@color/state_red" />

            <TextView
                android:id="@+id/textViewAwake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="10"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:text="Awake Scr. Off"
                android:textColor="@color/state_red"
                android:textSize="@dimen/legend_font_size" />

            <TextView
                android:id="@+id/textViewAwakeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:text="0h 45m (34%)"
                android:textColor="@color/state_red"
                android:textSize="@dimen/legend_font_size" />
        </LinearLayout>
        <View
            android:id="@+id/top_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/headline"
            android:background="@color/concrete" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="8dp"
                android:background="@color/state_yellow" />

            <TextView
                android:id="@+id/textViewScreenOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="10"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:text="Awake Scr. On"
                android:textColor="@color/state_yellow"
                android:textSize="@dimen/legend_font_size" />

            <TextView
                android:id="@+id/textViewScreenOnValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:text="0h 45m (34%)"
                android:textColor="@color/state_yellow"
                android:textSize="@dimen/legend_font_size" />
        </LinearLayout>
                <View
            android:id="@+id/top_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/headline"
            android:background="@color/concrete" />
        
    </LinearLayout>

</LinearLayout>