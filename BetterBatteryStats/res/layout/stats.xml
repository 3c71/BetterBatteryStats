<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/spinnerStat"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawSelectorOnTop="true"
        android:text="Spinner1" />

    <Spinner
        android:id="@+id/spinnerStatType"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawSelectorOnTop="true"
        android:text="Spinner1" />

    <Spinner
        android:id="@+id/spinnerStatSampleEnd"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawSelectorOnTop="true"
        android:text="Spinner1" />

    <FrameLayout
        android:id="@+id/FrameLayoutSince"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/TextViewSince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Since..."
            android:textSize="12sp"
            tools:ignore="HardcodedText" />
    </FrameLayout>
    <!--
		<View android:id="@+id/view_separator" 
		 android:layout_centerVertical ="true"
		 android:layout_width = "fill_parent"
		 android:layout_height="1dp"
		 android:layout_alignParentTop="true"
		 android:background="#7798fb98"/>
    -->


    <!-- Set height to 0, and let the weight param expand it -->
    <!--
         Note the use of the default ID! This lets us use a 
         ListActivity still!
    -->

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <!--
         android:dividerHeight="1dp"
        android:divider="#7798fb98"
    -->

</LinearLayout>